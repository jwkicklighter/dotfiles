" CUSTOM SETTINGS
set showmatch               " Highlight matching brackets
set incsearch
set ignorecase              " Ignore case for searches by default
set smartcase
set scrolloff=5             " Cause cursor to stay in middle of screen
set clipboard=unnamed       " Use system keyboard

" CUSTOM KEYBINDINGS
" Use <Space> to open prompt
nmap <Space> :

" Remap pane navigation keys
map <C-l> <C-w>l
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k

map - ^
map _ $

imap jk <Esc>
set timeoutlen=300

" IntelliJ-specific settings
map \r :action ReformatCode<CR>
set surround
