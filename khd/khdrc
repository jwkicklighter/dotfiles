# enable kwm compatibility mode
khd kwm on

# Set border colors for khd modes
khd mode default color 0xDD42CC9F
khd mode desktop color 0xDD00C9CE
khd mode resize color 0xDD4E93E5

# Reload khd config
alt + shift - r                   :   khd -e "reload" # reload config

# Switch to separate khd modes
ctrl + alt - r                    :   khd -e "mode activate resize"
ctrl + alt - d                    :   khd -e "mode activate desktop"

resize + ctrl + alt - r           :   khd -e "mode activate default"
resize + ctrl + alt - d           :   khd -e "mode activate desktop"

desktop + ctrl + alt - d          :   khd -e "mode activate default"
desktop + ctrl + alt - r          :   khd -e "mode activate resize"

# Select active window
alt - h                           :   kwmc window -f west
alt - l                           :   kwmc window -f east
alt - j                           :   kwmc window -f south
alt - k                           :   kwmc window -f north
alt - tab                         :   kwmc window -f next
alt + shift - tab                 :   kwmc window -f prev

# Rotate tree configuration
alt - r                           :   kwmc tree rotate 90

# Toggle active window mode
alt - f                           :   kwmc window -z fullscreen
alt - p                           :   kwmc window -z parent
alt + shift - space               :   kwmc window -t focused

# Move active window
alt + shift - h                   :   kwmc window -s west
alt + shift - j                   :   kwmc window -s south
alt + shift - k                   :   kwmc window -s north
alt + shift - l                   :   kwmc window -s east

# Resize active window
resize - h                        :   kwmc window -c expand 0.05 west
resize - j                        :   kwmc window -c expand 0.05 south
resize - k                        :   kwmc window -c expand 0.05 north
resize - l                        :   kwmc window -c expand 0.05 east
resize + shift - h                :   kwmc window -c reduce 0.05 west
resize + shift - j                :   kwmc window -c reduce 0.05 south
resize + shift - k                :   kwmc window -c reduce 0.05 north
resize + shift - l                :   kwmc window -c reduce 0.05 east

# Change space mode
alt - b                           :   kwmc space -t bsp
alt - m                           :   kwmc space -t monocle



# LAPTOP MODE (default)

# Select space
alt - 1                           :   kwmc space -fExperimental 1
alt - 2                           :   kwmc space -fExperimental 2
alt - 3                           :   kwmc space -fExperimental 3
alt - 4                           :   kwmc space -fExperimental 4
alt - 5                           :   kwmc space -fExperimental 5
alt - 6                           :   kwmc space -fExperimental 6
alt - 7                           :   kwmc space -fExperimental 7
alt - l                           :   kwmc space -fExperimental right
alt - h                           :   kwmc space -fExperimental left

# Move active window to space
alt + shift - 1                   :   kwmc window -m space 1
alt + shift - 2                   :   kwmc window -m space 2
alt + shift - 3                   :   kwmc window -m space 3
alt + shift - 4                   :   kwmc window -m space 4
alt + shift - 5                   :   kwmc window -m space 5
alt + shift - 6                   :   kwmc window -m space 6
alt + shift - 7                   :   kwmc window -m space 7
alt + shift - l                   :   kwmc window -m space right
alt + shift - h                   :   kwmc window -m space left



# DESKTOP MODE

# Select display
desktop + alt - 1                 :   kwmc display -f 1
desktop + alt - 2                 :   kwmc display -f 0
desktop + alt - 3                 :   kwmc display -f 2

# Move active window to display
desktop + alt + shift - 1         :   kwmc window -m display 1
desktop + alt + shift - 2         :   kwmc window -m display 0
desktop + alt + shift - 3         :   kwmc window -m display 2

# Select space
desktop + ctrl + alt - 1          :   kwmc space -fExperimental 1
desktop + ctrl + alt - 2          :   kwmc space -fExperimental 2
desktop + ctrl + alt - 3          :   kwmc space -fExperimental 3
desktop + ctrl + alt - l          :   kwmc space -fExperimental right
desktop + ctrl + alt - h          :   kwmc space -fExperimental left

# Move active window to space
desktop + ctrl + alt + shift - 1  :   kwmc window -m space 1
desktop + ctrl + alt + shift - 2  :   kwmc window -m space 2
desktop + ctrl + alt + shift - 3  :   kwmc window -m space 3
desktop + ctrl + alt + shift - l  :   kwmc window -m space right
desktop + ctrl + alt + shift - h  :   kwmc window -m space left
